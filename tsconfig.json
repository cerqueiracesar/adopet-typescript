{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "outDir": "./build",  // Pasta de saída
    "noEmitOnError": true,
    "baseUrl": "./src",  // Base para resolver os caminhos relativos
    "paths": {
      "controller/*": ["controller/*"]  // Mapeamento de controller
    },
    "rootDir": "./src",  // Diretório raiz para os arquivos de origem
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*",   // Incluindo todos os arquivos dentro de src
    "./server.ts"   // Incluir o server.ts
  ]
}
